<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Creepster&family=Finger+Paint&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GPK Index</title>
</head>
<style>
    body {
        font-family: 'Creepster', cursive;
        color: red;
        text-align: center;
        background: yellow;
    }
    h1 {
        font-family: 'Creepster', cursive;
        font-size: 3em;
        color: red;
    }
    a {
        text-decoration: none;
        color: #333;
        margin: 0 10px;
        /* list-style-type: none; */
    }

    ul {
        list-style-type: none;
    }

    .bigDiv {
        align-items: center;
        list-style-type: none;

    }
    .option {
        color: red;
    }
</style>
<body>
    <div class="bigDiv">
    <h1>Index</h1>

        <% cards.forEach((card) =>{ %>
            <li>
                <a href="/cards/<%=card._id%>">
                    <%= card.name %>,
                    <%= card.number %>
                </a>
            </li>

        <% }) %>

    </ul>
    <br>
    <a class="option" href="/cards/new">Add a new card</a><br>
    <a class="option" href="/">Home</a>
</div>
</body>
</html>